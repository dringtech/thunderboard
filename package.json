{
  "private": true,
  "scripts": {
    "build": "rollup --config",
    "postbuild": "npm run template",
    "template": "cptmpl src/templates/ docs/ \"{ \\\"VERSION\\\": \\\"$(git describe --always --long) $(date -R) \\\" }\" --recursive --force"
  },
  "browserslist": [
    "> 0.25%",
    "not dead"
  ],
  "dependencies": {
    "core-js": "^3.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/runtime": "^7.4.5",
    "@fortawesome/fontawesome-free": "^5.9.0",
    "cptmpl": "0.0.4",
    "husky": "^2.4.1",
    "rollup": "^1.14.6",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-copy": "^2.0.1",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-uglify": "^6.0.2"
  },
  "husky": {
    "hooks": {
      "post-commit": "npm run build && git add docs/index.html docs/thunderboard.appcache && HUSKY_SKIP_HOOKS=1 git commit -m 'Updating templated items'"
    }
  }
}
